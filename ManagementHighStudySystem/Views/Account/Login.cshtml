@using ManagementHighStudySystem.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <title>تسجيل الدخول</title>
    <script src="~/Contentjs/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/style1.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="shortcut icon" href="~/Content/css/img/icon2.png">
</head>


@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
 
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-1">
                <img src="~/Content/css/img/Logo.png" alt="جامعةالمنوفية">
            </div>
            <div class="col-md-6 login-form-2">
                @Html.ValidationSummary()
                <h3>تسجيل الدخول</h3>

                @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
             

                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="تسجيل الدخول" />
                </div>
                <div class="form-group">

                    <a href="#" class="ForgetPwd" value="Login">نسيت كلمة السر؟</a>
                    <br>
                    <a href="/Account/Register" class="ForgetPwd" value="Login">تسجيل حساب جديد</a>
                </div>

            </div>
        </div>
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }