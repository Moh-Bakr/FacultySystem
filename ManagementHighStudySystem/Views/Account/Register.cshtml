@model ManagementHighStudySystem.Models.RegisterViewModel
@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>التسجيل</title>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/jquery.min.js"></script>
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="stylesheet" href="~/Content/css/style1.css">
    <link rel="shortcut icon" href="~/Content/css/img/icon2.png">
    <link rel="stylesheet" href="~/Content/css/FA/all.css">

</head>
<body>
    
<div class="container">
    <br> 
    
    <div class="card bg-light">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">التسجيل</h4>

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                @Html.TextBoxFor(e => e.firstName, new { @class = "form-control", placeholder = "الاسم الاول" })
                

                @Html.TextBoxFor(e => e.lastName, new { @class = "form-control", placeholder = "الاسم الاخير" })
            


            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-id-card"></i> </span>
                </div>
                @Html.TextBoxFor(e => e.ssn, new { @class = "form-control", placeholder = "الرقم القومي" })
               
            </div> <!-- form-group// -->

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                @Html.TextBoxFor(e => e.Email, new { @class = "form-control", placeholder = "البريد الالكتروني" })
                 

            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                </div>
                <select class="custom-select" style="max-width: 120px;">
                    <option selected="">+20</option>
                </select>
                @Html.TextBoxFor(e => e.Phone, new { @class = "form-control", placeholder = " رقم الهاتف" })
              

            </div> <!-- form-group// -->
            <div class="form-group input-group">

                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-graduation-cap"></i> </span>
                </div>
                @Html.DropDownListFor(e => e.idPath, new SelectList(Model.path, "id", "pathTitle"), "اختر المسار", new { @class = "form-control" })
               

            </div> <!-- form-group end.// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    @Html.TextBoxFor(e => e.Password, new { @class = "form-control" , type = "password",placeholder="Password" })
                   
                </div> <!-- form-group// -->
                <div class="form-group input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                    </div>
                    @Html.TextBoxFor(e => e.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "ConfirmPassword" })
                    
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> التسجيل  </button>
                </div> <!-- form-group// -->
                <p class="text-center">لديك حساب بالفعل؟<a href="/Account/Login"> تسجيل الدخول</a> </p>
            }
        </article>
    </div> <!-- card.// -->
    
    </div> 
    
    
</body>
</html>